/*  KEY POSITIONS
    ╭─────────────────────────┬─────────────────────────╮
    │ LT5 LT4 LT3 LT2 LT1 LT0 │ RT0 RT1 RT2 RT3 RT4 RT5 │
    │ LM5 LM4 LM3 LM2 LM1 LM0 │ RM0 RM1 RM2 RM3 RM4 RM5 │
    │ LB5 LB4 LB3 LB2 LB1 LB0 │ RB0 RB1 RB2 RB3 RB4 RB5 │
    ╰───────────╮ LH2 LH1 LH0 │ RH0 RH1 RH2 ╭───────────╯
                ╰─────────────┴─────────────╯             */

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, TIMEOUT, RPI, ...) \
    combo_##NAME { \
        timeout-ms = <TIMEOUT>; \
        bindings = <BINDINGS>; \
        key-positions = <KEYPOS>; \
        layers = <LAYERS>; \
        require-prior-idle-ms = <RPI>; \
        __VA_ARGS__ \
    };

/ {
    combos {
        compatible = "zmk,combos";
        COMBO(bkt, &pair_bkt, RB1 RB2, DEF, 50, 0)
        COMBO(par, &pair_par, RB2 RB3, DEF, 50, 0)
        COMBO(brc, &pair_brc, RB3 RB4, DEF, 50, 0)
        COMBO(lgt, &pair_lgt, RM2 RM3, SYM, 50, 0)
    };
};